@model MvcBasics.Models.MovieReviewViewModel

<h1>Review Submitted!</h1>

<div style="border: 1px solid black; padding: 10px;">

    <!-- Display the movie title -->
    <h2>@Model.MovieTitle</h2>

    <!-- Display the selected genres as a comma-separated list -->
    <p><strong>Genres: </strong>@string.Join(", ", Model.SelectedGenres)</p>

    <!-- Display the rating -->
    <p><strong>Rating: </strong>@Model.Rating/5</p>

    <!-- Display the review text -->
    <p><strong>Review:</strong></br>@Model.Review</p>

    <!-- Display the recommendation status -->
    <p><strong>Recommendation: </strong>@(Model.Recommend ? "Yes" : "No")</p>
</div>

<!-- Button to return to the Create view -->
<form asp-action="Create">
    <button type="submit" class="btn btn-primary mt-3">Write Another Review</button>
</form>
