@model MvcBasics.Models.EventViewModel

<h2>Create Event</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@* //No need to add asp-action="" because when submitted the form will automatically submit to where the view was rendered in this case index, however if we didnt call it index and change the name but kept the code teh same everywhere else when we would need to add asp-action *@

<form method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="OrganizerEmail"></label>
        <input asp-for="OrganizerEmail" />
        <span asp-validation-for="OrganizerEmail" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<EventType>()"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Attendees"></label>
        <input asp-for="Attendees" type="number" />
        <span asp-validation-for="Attendees" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Website"></label>
        <input asp-for="Website" />
        <span asp-validation-for="Website" class="text-danger"></span>
    </div>

    <div>
        <input asp-for="AgreeToTerms" type="checkbox" />
        <label asp-for="AgreeToTerms"></label>
        <span asp-validation-for="AgreeToTerms" class="text-danger"></span>
    </div>

    <button type="submit">Create Event</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
